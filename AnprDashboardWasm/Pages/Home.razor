@page "/"

<PageTitle>ANPR Dashboard</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">🚗 ANPR Dashboard</h1>
        <p class="lead text-muted">Automatic Number Plate Recognition made simple.</p>
    </div>

    <div class="row g-4">
        <!-- Upload -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">📤 Upload Images</h5>
                    <p class="card-text">
                        Upload vehicle images and let the system automatically detect license plates 
                        using advanced OCR and image processing.
                    </p>
                    <a href="/upload" class="btn btn-primary">Go to Upload</a>
                </div>
            </div>
        </div>

        <!-- History & Analytics -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">📜 History & 📊 Analytics</h5>
                    <p class="card-text">
                        Browse all past detections with searchable history, view associated images, 
                        and explore simple charts showing detection trends and the most frequent plates.
                    </p>
                    <a href="/history" class="btn btn-success">View History & Analytics</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center text-muted">
        <p>Powered by <b>Blazor</b>, <b>OpenCV</b>, and <b>Tesseract OCR</b>.</p>
    </div>
</div>
